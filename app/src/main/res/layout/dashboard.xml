<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/gradient_background">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Schedule"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/purple"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Scrollable content section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card for reservation -->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                android:radius="12dp"
                >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:background="@drawable/card_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: Jan 10, 2025"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"
                android:textStyle="bold" /> <!-- Bold for stronger emphasis -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Module: Operating Systems"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"
                android:textStyle="italic" /> <!-- Italic style for differentiation -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time: 08:00 - 10:00"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Premises: FF01"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year: 1st"
                android:textSize="16sp"
                android:textColor="@color/black" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

            <!-- Add more CardView elements for other reservations as needed -->

        </LinearLayout>
    </ScrollView>

    <!-- Date selection and Confirm Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="From (DD/MM/YYYY)"
            android:padding="12dp"
            android:background="@drawable/input_background" />

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="To (DD/MM/YYYY)"
            android:padding="12dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/input_background" />
    </LinearLayout>

    <!-- Confirm Button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textAllCaps="false"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:padding="12dp" />
</LinearLayout>
